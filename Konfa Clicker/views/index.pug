extend layout

block content
    section(class='text' id='startSection')
        h1(class='title')
            span(class='fontawesome-star star') 
            | 
            span Konfa Clicker
            | 
            span(class='fontawesome-star star') 
        h3(class='title')
            span Press the
            |
            |
            button(type='button' id='pressStart') button
            |
            |
            span to start
    
    div(id='gameWindow' class='gameWindow')
        header(id='header')
            h1 Konfa Clicker
        
        div
            img(id='popUp' src='/images/popUpPhoto.png')

        div(class='main')
            div(class='col leftSide' id='leftSide')
                br
                p(class='points')
                    span Meme Value:
                    span(id='currencyHTML')
                br
                div(id='mainButton')

            div(class='col middle')
            div(class='col rightSide')
                h3 POWERS:
                div(id='powers')
                    table(class='powerup')
                        tr
                            td
                                button(class='buyButton glow-on-hover' id='firstPower') BUY
                            td 
                                span No Nie≈∫le
                            td
                                span Cost: 
                                span(id='firstPowerPrice')
                            td
                                span Counter:
                                span(id='firstPowerCounter')
                        tr
                            td
                                button(class='buyButton glow-on-hover' id='secondPower') BUY
                            td
                                span NANI ARIGATO!
                            td
                                span Cost: 
                                span(id='secondPowerPrice')
                            td
                                span Counter:
                                span(id='secondPowerCounter')
                        tr
                            td
                                button(class='buyButton glow-on-hover' id='thirdPower') BUY
                            td
                                span Enneagram
                            td
                                span Cost: 
                                span(id='thirdPowerPrice')
                            td
                                span Counter:
                                span(id='thirdPowerCounter')
                h3 UPGRADES:
                div(id='upgrades')
                    table(class='powerup')
                        tr
                            td
                                button(class='buyButton glow-on-hover' id='mainButtonUpgrade') BUY
                            td
                                img(class='photoOfUpgrade borderRadius' src='/images/mainButtonPhoto.png')
                            td
                                span Cost:
                                span(id='mainButtonUpgradePrice')
                        tr
                            td
                                button(class='buyButton glow-on-hover' id='firstPowerUpgrade') BUY
                            td
                                img(class='photoOfUpgrade' src='/images/firstPowerPhoto.png')
                            td
                                span Cost:
                                span(id='firstPowerUpgradePrice')
                        tr
                            td
                                button(class='buyButton glow-on-hover' id='secondPowerUpgrade') BUY
                            td
                                img(class='photoOfUpgrade' src='/images/secondPowerPhoto.png')
                            td
                                span Cost:
                                span(id='secondPowerUpgradePrice')
                        tr
                            td
                                button(class='buyButton glow-on-hover' id='thirdPowerUpgrade') BUY
                            td
                                img(class='photoOfUpgrade' src='/images/thirdPowerPhoto.png')
                            td
                                span Cost:
                                span(id='thirdPowerUpgradePrice')

        footer
            h3 Made by Dorian Janiak

    script(type='module' src='/javascripts/UIController.js')
    script(type='module' src='/javascripts/main.js')